{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "EasyPaste",
  "version": "0.1.4",
  "identifier": "com.lin.EasyPaste.dev",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:23000",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist",
    "removeUnusedCommands": true
  },
  "app": {
    "windows": [

    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "category": "Utility",
    "createUpdaterArtifacts": true,
    "targets": ["nsis", "dmg", "app"],
    "licenseFile": "../LICENSE",
    "publisher": "lin0306",
    "shortDescription": "一个简易且高效的剪贴板管理工具",
    "icon": [
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "allowDowngrades": false,
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "signCommand": null,
      "timestampUrl": null,
      "tsp": false,
      "webviewInstallMode": {
        "silent": true,
        "type": "embedBootstrapper"
      },
      "nsis": {
        "languages": [
          "SimpChinese",
          "English"
        ],
        "displayLanguageSelector": true,
        "installerHooks": "./configs/nsis/hook.nsh",
        "installerIcon": "./icons/icon.ico",
        "installMode": "both"
      }
    },
    "macOS": {
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "height": 400,
          "width": 660
        }
      },
      "files": {},
      "hardenedRuntime": true,
      "minimumSystemVersion": "10.13"
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://gh-proxy.com/https://github.com/lin0306/EasyPaste/blob/master/latest.json",
        "https://gh-proxy.com/github.com/lin0306/EasyPaste/blob/master/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDI2NjYxRjI1NDc2QzgwNUYKUldSZmdHeEhKUjltSnBEdGk2eGZHdjhnck1SaEFCaDl4MmpOMXFqNE81K2x3dmY3b1N2U0N5SjMK"
    }
  }
}